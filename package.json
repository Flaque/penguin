{
  "name": "penguin",
  "productName": "Penguin",
  "version": "0.0.0",
  "description": "My polished app",
  "license": "MIT",
  "repository": "flaque/penguin",
  "author": {
    "name": "Evan Conrad",
    "email": "econrad@zagmail.gonzaga.edu",
    "url": "evanconrad.com"
  },
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "test": "jest",
    "build": "export NODE_ENV='production'; electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=$npm_package_electronVersion",
    "build-sass": "node-sass --include-path src/styles --source-map index.map src/styles/index.scss index.css",
    "watch-sass": "nodemon -e scss -x \"npm run build-sass\"",
    "start": "export NODE_ENV='dev'; ./node_modules/.bin/electron . & webpack --watch & npm run watch-sass"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "dependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "css-loader": "^0.27.1",
    "dropzone": "^4.3.0",
    "electron-debug": "^0.2.1",
    "fs-jetpack": "^0.12.0",
    "imports-loader": "^0.7.1",
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-color": "^2.11.3",
    "react-dom": "^15.4.2",
    "rsvg": "^0.2.5",
    "sass-loader": "^6.0.3",
    "snapsvg": "^0.5.1",
    "svg.js": "^2.4.0",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "electron": "^1.6.2",
    "electron-packager": "^5.0.0",
    "node-sass": "^3.3.3",
    "nodemon": "^1.7.0",
    "style-loader": "^0.13.2"
  }
}
